@media (min-width: 768px) {
  #screen-effect {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    min-height: 100%;
    background-color: rgba(0, 0, 0, 0.5); }
  #pop-up {
    display: block;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    height: 80dvh;
    width: 85dvw;
    z-index: 100;
    background-color: whitesmoke;
    overflow: auto;
    border-radius: 1rem; }
  #content_box {
    height: 100%;
    min-width: -moz-max-content;
    min-width: max-content;
    width: 100%;
    display: grid;
    grid-template-rows: auto 1fr; }
  #content_container {
    margin-bottom: 1rem;
    margin-left: 1rem;
    margin-right: 1rem;
    display: grid;
    grid-template-rows: 100%;
    gap: 1rem;
    grid-auto-flow: column;
    grid-auto-columns: 50ch; }
    #content_container p {
      margin-top: 1rem;
      font-family: monospace;
      font-size: 1rem; }
    #content_container img.landscape {
      grid-column: span 2; }
    #content_container img {
      -o-object-fit: cover;
         object-fit: cover;
      height: 100%;
      margin: auto; }
  #page_title {
    font-size: 4.5rem;
    line-height: 1;
    margin-bottom: 0.5rem;
    margin-top: 0.5rem;
    padding-left: 0.5rem;
    white-space: nowrap;
    position: sticky;
    width: 100px;
    top: 0;
    left: 0;
    align-self: start; } }

@media (max-width: 767px) {
  #page_title {
    font-size: 3rem;
    line-height: 1;
    margin-bottom: 1.5rem;
    margin-top: 0.5rem;
    text-align: center; }
  #content_wrapper {
    width: 100dvw; }
  #content_box {
    margin-left: 1rem;
    margin-right: 1rem; }
  #content_container img {
    margin-bottom: 1rem; }
  #content_container section {
    margin-bottom: 1rem; }
    #content_container section p {
      text-align: center; }
  #cover_image {
    display: none; } }
